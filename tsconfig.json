{
    "extends": "@react-native/typescript-config",
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["**/node_modules", "**/Pods"],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@/components/*": ["src/components/*"],
            "@/theme/*": ["src/theme/*"],
            "@/utils/*": ["src/utils/*"],
            "@/routes/*": ["src/routes/*"],
            "@/modules/*": ["src/modules/*"],
            "@/assets/*": ["src/assets/*"]
        }
    }
}
